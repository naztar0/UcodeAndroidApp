<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_challenge_page_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ChallengePageActivity"
        android:paddingBottom="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/challenge_page_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp"
            app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingHorizontal="10dp"
                android:paddingVertical="12dp"
                android:background="@drawable/ripple_white_bg">
                <TextView
                    android:id="@+id/challenge_page_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Connect Race01 Part of the Matrix"
                    android:textSize="22sp"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/challenge_page_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/challenge_page_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="5dp"
                    android:text="Game development according to the whole cycle of Challenge Based Learning framework."
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:paddingHorizontal="10dp"
                    android:visibility="gone"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/challenge_page_mark_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_page_title_layout"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp">
                <TextView
                    android:id="@+id/challenge_page_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="15dp"
                    android:text="Success: 100"
                    android:textSize="20sp"
                    android:textColor="@color/challenge_success"
                    android:background="@drawable/ripple_green_bg"
                    android:clickable="true"
                    android:focusable="true"/>

            </androidx.cardview.widget.CardView>
        <HorizontalScrollView
            android:id="@+id/challenge_team_members_scroll_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/challenge_page_mark_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/challenge_team_members_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:orientation="horizontal"
                android:gravity="center">
                <RelativeLayout
                    android:id="@+id/test_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/ripple_grey_border"
                    android:clickable="true"
                    android:focusable="true">
                    <FrameLayout
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/photo_wrapper_green">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/default_avatar"
                                android:contentDescription="@string/fill_zero" />
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="anevodnich"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="75dp"/>
                </RelativeLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/challenge_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/challenge_team_members_scroll_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="plitovka's team"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/challenge_finish_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/challenge_team_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/finish"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/profile_white_text"
            android:background="@drawable/ripple_dark_bg"
            android:visibility="gone"/>

        <Button
            android:id="@+id/challenge_give_up_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/challenge_finish_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/give_up"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/profile_white_text"
            android:background="@drawable/ripple_red2_bg"
            android:visibility="gone"/>

        <Button
            android:id="@+id/challenge_reflection_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/challenge_give_up_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/reflection"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/profile_white_text"
            android:background="@drawable/ripple_dark_bg"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/past_assessments_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/challenge_team_name"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="5dp"
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:background="@drawable/border_dark">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="15dp"
                android:paddingHorizontal="10dp"
                android:gravity="bottom"
                android:clickable="true"
                android:focusable="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/ripple_grey_border">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/default_avatar"
                            android:contentDescription="@string/fill_zero"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:layout_centerHorizontal="true"
                        android:text="anevodnich"
                        android:textSize="12sp"
                        android:textAlignment="center"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/challenge_feedback_text">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp">

                            <com.example.ucode.CircularProgressBar
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="3dp"
                                android:text="100"/>
                        </RelativeLayout>
                        <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="50dp">

                            <com.example.ucode.CircularProgressBar
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="3dp"
                                android:text="100"/>
                        </RelativeLayout>
                        <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="100dp">

                        <com.example.ucode.CircularProgressBar
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginEnd="3dp"
                            android:layout_marginBottom="3dp"
                            android:text="5.0"/>
                    </RelativeLayout>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Very very nice good and excellent!!!"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="15dp"
                android:paddingHorizontal="10dp"
                android:gravity="bottom"
                android:clickable="true"
                android:focusable="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/ripple_grey_border">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/default_avatar"
                            android:contentDescription="@string/fill_zero"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:layout_centerHorizontal="true"
                        android:text="anevodnich"
                        android:textSize="12sp"
                        android:textAlignment="center"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/challenge_feedback_text">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp">

                            <com.example.ucode.CircularProgressBar
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="3dp"
                                android:text="100"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="50dp">

                            <com.example.ucode.CircularProgressBar
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="3dp"
                                android:text="100"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:paddingHorizontal="10dp"
                            android:textSize="16sp"
                            android:text="How well did the assessor communicate?"/>

                        <SeekBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="5"
                            android:progress="3" />

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:text="Toxic" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="10dp"
                            android:background="@drawable/border_grey"
                            android:hint="Comment" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:text="Submit"
                            android:textSize="16sp"
                            android:textAllCaps="false"
                            android:textColor="@color/profile_white_text"
                            android:background="@drawable/ripple_dark_bg"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/past_assessments_layout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/challenge_team_name"
            android:layout_marginTop="9dp"
            android:paddingHorizontal="10dp"
            android:text="Assessments"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorLightDefault"/>

        <LinearLayout
            android:id="@+id/past_automatons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/past_assessments_layout"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:orientation="vertical"
            android:background="@drawable/border_dark"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:background="@drawable/ripple_grey_border">
                <RelativeLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true">
                    <com.example.ucode.CircularProgressBar
                        android:layout_width="55dp"
                        android:layout_height="55dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:textSize="15sp"
                        android:text="100"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_centerHorizontal="true"
                    android:text="Oracle"
                    android:textSize="18sp"
                    android:textAlignment="center"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/past_automatons_layout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/past_assessments_layout"
            android:layout_marginTop="9dp"
            android:paddingHorizontal="10dp"
            android:text="Automatic evaluations"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorLightDefault"/>

        <LinearLayout
            android:id="@+id/past_presentations_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/past_automatons_layout"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="5dp"
            android:paddingVertical="5dp"
            android:orientation="vertical"
            android:background="@drawable/border_dark">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingHorizontal="10dp"
                android:gravity="bottom"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/challenge_feedback_text"
                    android:textSize="18sp"
                    android:text="Very very nice good and excellent!!!"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="anevodnich"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/past_presentations_layout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/past_automatons_layout"
            android:layout_marginTop="9dp"
            android:paddingHorizontal="10dp"
            android:text="Presentation mark: 147"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorLightDefault"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>