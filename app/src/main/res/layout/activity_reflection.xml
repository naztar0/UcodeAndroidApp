<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reflection_page_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReflectionActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/reflection_page_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingHorizontal="10dp"
                android:paddingVertical="12dp"
                android:background="@drawable/ripple_white_bg">
                <TextView
                    android:id="@+id/reflection_page_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Assessment for anevodnich's team"
                    android:textSize="20sp"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/reflection_page_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/reflection_page_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="5dp"
                    android:text="Sprint 01"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:paddingHorizontal="10dp"
                    android:visibility="gone"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/reflection_page_questions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/reflection_page_title_layout"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:paddingTop="5dp"
                android:orientation="vertical"
                android:background="@drawable/border_dark">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="15dp"
                    android:text="General"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/profile_black_text_80"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginVertical="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="There is a utils pack of functions."
                    android:textSize="15sp"
                    android:textColor="@color/profile_black_text_80"
                    android:background="@color/grey_5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="2dp"
                        android:layout_marginHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="15dp"
                        android:text="Assign a label below"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_black_text_80"
                        android:background="@color/grey_5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/profile_black_text_80"
                        android:text="Select the first option that came up.\n\nHelp the defending team to understand their mistakes, discuss the challenge in detail, and exchange knowledge."/>

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="15dp">

                                <androidx.appcompat.widget.AppCompatRadioButton
                                    android:layout_width="120dp"
                                    android:layout_height="35dp"
                                    android:button="@android:color/transparent"
                                    android:text="Irrevalent files"
                                    android:textAlignment="center"
                                    android:textSize="14sp"
                                    android:background="@drawable/radio_button_false"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="135dp"
                                    android:layout_marginTop="-35dp"
                                    android:layout_marginBottom="30dp"
                                    android:textSize="12sp"
                                    android:textColor="@color/profile_black_text_80"
                                    android:text="The repository is empty. You have nothing to evaluate, select this item."/>

                                <androidx.appcompat.widget.AppCompatRadioButton
                                    android:layout_width="120dp"
                                    android:layout_height="35dp"
                                    android:button="@android:color/transparent"
                                    android:text="OK"
                                    android:textAlignment="center"
                                    android:textSize="14sp"
                                    android:background="@drawable/radio_button_true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="135dp"
                                    android:layout_marginTop="-35dp"
                                    android:layout_marginBottom="30dp"
                                    android:textSize="12sp"
                                    android:textColor="@color/profile_black_text_80"
                                    android:text="If none of the issues above were found."/>
                        </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:paddingTop="5dp"
                android:orientation="vertical"
                android:background="@drawable/border_dark">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="15dp"
                    android:text="Utils pack"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/profile_black_text_80"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginVertical="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="There is a utils pack of functions."
                    android:textSize="15sp"
                    android:textColor="@color/profile_black_text_80"
                    android:background="@color/grey_5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="15dp"
                        android:layout_marginVertical="2dp"
                        android:layout_marginHorizontal="10dp"
                        android:text="Manual testing"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_black_text_80"
                        android:background="@color/grey_5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/profile_black_text_80"
                        android:text="Create a test `main.c` file. Write some simple tests to check library performance.\n\n Everything works correctly."/>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="15dp">
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:button="@android:color/transparent"
                            android:text="False"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:background="@drawable/radio_button_false_bool"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="-1dp"
                            android:button="@android:color/transparent"
                            android:text="True"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:background="@drawable/radio_button_true_bool"/>
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="15dp"
                        android:layout_marginVertical="2dp"
                        android:layout_marginHorizontal="10dp"
                        android:text="Print functions"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_black_text_80"
                        android:background="@color/grey_5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/profile_black_text_80"
                        android:text="Check the work of all the following functions."/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="15dp">
                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="The work of `mx_printchar` function is correct."/>
                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="The work of `mx_print_unicode` function is correct."/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="15dp"
                        android:layout_marginVertical="2dp"
                        android:layout_marginHorizontal="10dp"
                        android:text="Binary search"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_black_text_80"
                        android:background="@color/grey_5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/profile_black_text_80"
                        android:text="The work of `binary search` function is correct.\n"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="15dp"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="10dp"
                        android:textSize="10sp"
                        android:textColor="@color/profile_white_text_80"
                        android:background="@drawable/dark_bg"
                        android:typeface="monospace"
                        android:textIsSelectable="true"
                        android:text="arr = {222, Abcd, aBc, ab, az, z};\ncount = 0;\nmx_binary_search(arr, 6, ab, count); //returns 3 and count = 3\nmx_binary_search(arr, 6, aBc, count); //returns 2 and count = 1"/>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="15dp">
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:button="@android:color/transparent"
                            android:text="False"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:background="@drawable/radio_button_false_bool"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="-1dp"
                            android:button="@android:color/transparent"
                            android:text="True"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:background="@drawable/radio_button_true_bool"/>
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="15dp"
                        android:layout_marginVertical="2dp"
                        android:layout_marginHorizontal="10dp"
                        android:text="Evaluation"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_black_text_80"
                        android:background="@color/grey_5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/profile_black_text_80"
                        android:text="The work of `binary search` function is correct.\n"/>
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/ripple_dark_bg"
                        android:text="@string/reflection"
                        android:textColor="@color/profile_white_text_80"/>
                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="10dp"
                        android:max="10"
                        android:progress="5"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="15dp"
                        android:layout_marginVertical="2dp"
                        android:layout_marginHorizontal="10dp"
                        android:text="Comment"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_black_text_80"
                        android:background="@color/grey_5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/profile_black_text_80"
                        android:text="Leave a comment on this evaluation."/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:background="@drawable/border_grey"
                        android:hint="Comment" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/finish_assessment_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/reflection_page_questions_layout"
            app:layout_constraintBottom_toTopOf="@id/finish_assessment_all_true_button"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ripple_cyan_bg"
            android:textSize="16sp"
            android:text="@string/finish_assessment"/>

        <Button
            android:id="@+id/finish_assessment_all_true_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/finish_assessment_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ripple_purple_bg"
            android:textSize="16sp"
            android:text="All 100%"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>